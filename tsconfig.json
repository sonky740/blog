{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",
    "lib": ["dom", "dom.iterable"],
    "jsx": "preserve",

    /* Modules */
    "module": "commonjs",

    /* JavaScript Support */
    "allowJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["./node_modules", "./public"]
}
